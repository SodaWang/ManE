<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_transaction_details"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_index_listviewimg"
    android:background="@color/white"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_transaction_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="服务名称"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_listview_title" />

        <TextView
            android:id="@+id/tv_item_transaction_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2015-10-11"
            android:textColor="@color/text_color_listviewtext"
            android:textSize="@dimen/text_size_listview_text" />

        <TextView
            android:id="@+id/tv_item_transaction_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_item_transaction_details_date"
            android:layout_marginTop="@dimen/title_search_margin"
            android:text="+330.00"
            android:textColor="@color/text_color_tips"
            android:textSize="@dimen/text_size_grid" />

        <TextView
            android:id="@+id/tv_item_transaction_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_item_transaction_details_title"
            android:layout_marginTop="@dimen/title_search_margin"
            android:text="支付人姓名"
            android:textColor="@color/text_color_listviewtext"
            android:textSize="@dimen/text_size_listview_text" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dividing_line"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color_main" />

</RelativeLayout>
