<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_vintage_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/width_index_mainAd"
        android:layout_height="@dimen/height_index_listviewitem"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_item_vintage_list_img"
            android:layout_width="@dimen/width_index_listviewimg"
            android:layout_height="@dimen/height_index_listviewimg"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/listimg" />

        <TextView
            android:id="@+id/tv_item_vintage_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_vintage_list_img"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_toRightOf="@+id/iv_item_vintage_list_img"
            android:text="@string/index_list_title"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_listview_title" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_vintage_list_title"
            android:layout_centerVertical="true">


            <TextView
                android:id="@+id/tv_item_vintage_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"

                android:text="￥66/人"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_listview_text" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_item_vintage_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_vintage_list_img"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_toRightOf="@+id/iv_item_vintage_list_img"
            android:text="发布时间:2015-12-14"
            android:textColor="@color/text_color_listviewtext"
            android:textSize="@dimen/text_size_listview_text" />

        <ImageView
            android:id="@+id/iv_item_vintage_list_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"
            android:text="66m" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_dividing_line"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color_main" />
    </RelativeLayout>
</RelativeLayout>
