<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_bannarPointer"
        android:background="@color/bg_color_dividing_line"
        android:paddingLeft="@dimen/layout_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="@string/popular_recommendation"
            android:textColor="@color/text_color_edit"
            android:textSize="@dimen/text_size_grid" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_margin_bigmiddle"
        android:paddingRight="@dimen/layout_margin_bigmiddle"
        android:paddingTop="@dimen/layout_margin_bigmiddle">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_bannarPointer"
        android:background="@color/bg_color_dividing_line"
        android:paddingLeft="@dimen/layout_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="@string/search_history"
            android:textColor="@color/text_color_edit"
            android:textSize="@dimen/text_size_grid" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingTop="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </LinearLayout>



</LinearLayout>
