<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_titleBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_index_textSpacing"
            android:background="@color/bg_color_main" />

        <RelativeLayout
            android:id="@+id/rl_ezhuandian_getmonney_game"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_getmonneyitem_title"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding">

            <TextView
                android:layout_width="@dimen/height_orangeline"
                android:layout_height="@dimen/width_orangeline"
                android:layout_centerVertical="true"
                android:background="@color/bg_color_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_verticalline"
                android:text="@string/getmonney_game"
                android:textSize="@dimen/text_size_grid" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    android:textColor="@color/bg_color_title"
                    android:textSize="@dimen/text_size_grid" />

                <Button
                    android:layout_width="@dimen/width_title_back"
                    android:layout_height="@dimen/height_title_back"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:background="@drawable/arrow_orange_right" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_ezhuandian_getmonney_game_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_getmonney_ad"
            android:background="@drawable/ad1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_index_textSpacing"
                android:background="@color/bg_color_main" />

            <RelativeLayout
                android:id="@+id/rl_ezhuandian_app_suggest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_getmonneyitem_title"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding">

                <TextView
                    android:layout_width="@dimen/height_orangeline"
                    android:layout_height="@dimen/width_orangeline"
                    android:layout_centerVertical="true"
                    android:background="@color/bg_color_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_toRightOf="@id/tv_verticalline"
                    android:text="@string/app_suggest"
                    android:textSize="@dimen/text_size_grid" />

                <LinearLayout
                    android:id="@+id/ll_item_getmonney_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:textColor="@color/bg_color_title"
                        android:textSize="@dimen/text_size_grid" />

                    <Button
                        android:layout_width="@dimen/width_title_back"
                        android:layout_height="@dimen/height_title_back"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:background="@drawable/arrow_orange_right" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_ezhuandian_appimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_getmonney_ad"
                android:background="@drawable/ad1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


