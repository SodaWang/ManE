<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/rl_item_bankfinancing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/width_index_mainAd"
        android:layout_height="@dimen/height_index_listviewitem"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_item_bankfinancing_img"
            android:layout_width="@dimen/width_index_listviewimg"
            android:layout_height="@dimen/height_index_listviewimg"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/listimg" />

        <TextView
            android:id="@+id/tv_item_bankfinancing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_bankfinancing_img"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_toRightOf="@+id/iv_item_bankfinancing_img"
            android:text="@string/index_list_title"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_listview_title" />

        <TextView
            android:id="@+id/tv_item_bankfinancing_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_bankfinancing_img"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_toRightOf="@+id/iv_item_bankfinancing_img"
            android:text="@string/index_list_text"
            android:textColor="@color/text_color_listviewtext"
            android:textSize="@dimen/text_size_listview_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_dividing_line"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color_main" />
    </RelativeLayout>
</RelativeLayout>
