<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical"
    tools:context="com.hshy41.mane.my.activity.AccountActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_account_monney"
        android:background="@color/color_bg_monney"
        android:paddingLeft="@dimen/layout_margin_bigmiddle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/white"
                android:textSize="@dimen/text_total_title" />

            <TextView
                android:id="@+id/tv_account_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000.00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_total_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cashable"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />

                <TextView
                    android:id="@+id/tv_account_cashable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:text="@string/cashed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />

                <TextView
                    android:id="@+id/tv_account_cashed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backcash"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />

                <TextView
                    android:id="@+id/tv_account_backcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_grid" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_transaction_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_layout"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/layout_margin_bigmiddle">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/transaction_details"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_listview_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin_middle"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_cash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_layout"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/layout_margin_bigmiddle">


        <TextView
            android:id="@+id/tv_account_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cash"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_listview_title" />


        <TextView
            android:id="@+id/tv_cashtips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_toRightOf="@id/tv_account_cash"
            android:text="@string/accounttips"
            android:textColor="@color/text_color_tips"
            android:textSize="@dimen/text_size_listview_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin_middle"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>
