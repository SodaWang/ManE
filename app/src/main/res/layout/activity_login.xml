<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- -->

    <include
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tabBar"
        layout="@layout/title_bar" />

        <LinearLayout
            android:background="@color/bg_color_main"
            android:paddingTop="@dimen/padding_middle"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/editjiage_color"
                android:padding="@dimen/layout_margin"
                >

                <ImageView
                    android:id="@+id/userTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userTv"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:phoneNumber="true"
                    android:textColorHint="@color/item_pressed_color"
                    android:hint="@string/enterphonenumber"
                    android:singleLine="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:layout_marginStart="@dimen/layout_margin"
                android:background="@drawable/editjiage_color"
                android:padding="@dimen/layout_margin"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pwdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/password"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/enterpassword"
                    android:textColorHint="@color/item_pressed_color"
                    android:background="@null"
                    android:password="true"
                    android:singleLine="true" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin_middle"
                >
                <TextView
                    android:id="@+id/tv_forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgetpassword"
                    android:textColor="@color/item_pressed_color"
                    android:textSize="@dimen/text_login_littletips"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_findpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/findpassword"
                    android:textSize="@dimen/text_login_littletips"
                    android:textColor="@color/text_color_tips"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/bt_login_login"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin_middleaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_big"
                android:background="@drawable/bg_button"
                />
        </LinearLayout>


</LinearLayout>
