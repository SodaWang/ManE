<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.hshy41.mane.my.activity.PersonalInfoSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_main"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <EditText
            android:id="@+id/et_goods_release_enter_baby_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/color_white"
            android:hint="@string/enter_baby_title"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:textColorHint="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />

        <EditText
            android:id="@+id/et_goods_release_enter_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/color_white"
            android:hint="@string/enter_baby_title"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:textColorHint="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />

        <EditText
            android:id="@+id/et_goods_release_enter_baby_introduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_index_ad1"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/color_white"
            android:gravity="top"
            android:hint="@string/enter_baby_introduce"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:textColorHint="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/click_add_can_upload_photo"
            android:textColor="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_goods_release"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_index_market"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin">

        </android.support.v7.widget.RecyclerView>

        <EditText
            android:id="@+id/et_goods_release_original_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/color_white"
            android:hint="@string/original_price"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:textColorHint="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />

        <EditText
            android:id="@+id/et_goods_release_transfer_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/color_white"
            android:hint="@string/transfer_price"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:textColorHint="@color/item_pressed_color"
            android:textSize="@dimen/text_size_listview_title" />


        <Button
            android:id="@+id/bt_goods_release_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_middleaa"
            android:background="@drawable/bg_button"
            android:text="@string/release"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</ScrollView>



