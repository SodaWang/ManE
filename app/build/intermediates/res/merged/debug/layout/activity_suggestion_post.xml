<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tabBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_main"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_suggestion_post_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/white"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding">

            <EditText
                android:id="@+id/et_suggestion_post_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/suggestion_post_hint"
                android:textColor="@color/text_color_listviewtext"
                android:textSize="@dimen/text_size_listview_text" />

        </LinearLayout>


        <Button
            android:id="@+id/bt_suggestion_post_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_bigmiddle"
            android:background="@drawable/bg_button"
            android:text="@string/commit"
            android:textColor="@color/color_white" />
    </LinearLayout>


</LinearLayout>
