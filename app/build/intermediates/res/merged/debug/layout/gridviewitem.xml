<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_grid_item"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/iv_gridItem_img"
        android:layout_width="@dimen/width_grid_item"
        android:layout_height="@dimen/width_grid_item"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"></ImageView>

    <TextView
        android:id="@+id/tv_gridItem_text"
        android:layout_width="@dimen/width_grid_item"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gridItem_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/grid_index_textSpacing"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:textColor="@color/text_color_edit"
        android:textSize="@dimen/text_size_grid"></TextView>

</RelativeLayout>