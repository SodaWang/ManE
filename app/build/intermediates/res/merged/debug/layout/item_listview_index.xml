<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/width_index_mainAd"
        android:layout_height="@dimen/height_index_listviewitem">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_index_listimg"
            android:layout_width="@dimen/width_index_listviewimg"
            android:layout_height="@dimen/height_index_listviewimg"
            android:background="@drawable/listimg"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:layout_alignTop="@+id/iv_index_listimg"
            android:layout_toRightOf="@+id/iv_index_listimg"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_index_listtitle"
            android:text="@string/index_list_title"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_listview_title"/>

        <TextView
            android:layout_alignBottom="@+id/iv_index_listimg"
            android:layout_toRightOf="@+id/iv_index_listimg"
            android:layout_marginLeft="@dimen/marinRight_index_listviewimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_index_listtext"
            android:text="@string/index_list_text"
            android:textColor="@color/text_color_listviewtext"
            android:textSize="@dimen/text_size_listview_text"/>

    </RelativeLayout>
</RelativeLayout>
