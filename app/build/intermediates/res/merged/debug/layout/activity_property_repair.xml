<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_property_repair_public_repair"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_public_repair"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/white"
        android:padding="@dimen/layout_margin_bigmiddle">

        <ImageView
            android:id="@+id/iv_property_repair_public_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/gonggongbaoxiu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_bigmiddle"
            android:layout_toRightOf="@+id/iv_property_repair_public_repair"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/public_repair"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_listview_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_productinfo_title"
                android:layout_below="@+id/tv_productinfo_title"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/public_repair_tip"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_listview_text" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_property_repair_personal_repair"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_public_repair"
        android:layout_marginTop="@dimen/hw_dividing_line"
        android:background="@color/white"
        android:padding="@dimen/layout_margin_bigmiddle">

        <ImageView
            android:id="@+id/iv_property_repair_personal_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/gerenbaoxiu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_bigmiddle"
            android:layout_toRightOf="@+id/iv_property_repair_personal_repair"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/personal_repair"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_listview_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_productinfo_title"
                android:layout_below="@+id/tv_productinfo_title"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/personal_repair_tip"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_listview_text" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_property_repair_one_key_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_onekeyphone"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin_bigmiddle"
        android:background="@drawable/bg_button">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/kefu" />

            <TextView
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_margin"
                android:text="@string/call_right_now"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_big" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>