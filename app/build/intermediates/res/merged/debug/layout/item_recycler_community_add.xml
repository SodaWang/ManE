<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_community_add"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_getmonneyitem_title"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/width_index_mainAd"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_item_community_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/add" />


        <TextView
            android:id="@+id/tv_item_community_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_search_margin"
            android:layout_toRightOf="@+id/iv_item_community_add"
            android:text="@string/customeadd"
            android:textColor="@color/text_color_tips"
            android:textSize="@dimen/text_size_listview_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>

</RelativeLayout>
