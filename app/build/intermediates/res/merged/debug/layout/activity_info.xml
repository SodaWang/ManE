<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical" >
    
            <RelativeLayout
                android:id="@+id/info_face"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:layout_marginTop="@dimen/layout_margin_middleaa"
                android:background="@color/color_white"
                android:padding="@dimen/index_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/imgset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou" />

                <ImageView
                    android:id="@+id/info_faceimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgset"
                    android:layout_marginRight="@dimen/index_padding"
                    android:scaleType="fitXY"
                    android:src="@drawable/shequ_check"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/segment_line_height"
                android:background="@color/bg_color_dividing_line" />
                        <RelativeLayout
                android:id="@+id/info_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:background="@color/color_white"
                android:padding="@dimen/index_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/imgset2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou" />

                <TextView
                    android:id="@+id/info_nicknametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgset2"
                    android:layout_marginRight="@dimen/index_padding"
                   	android:text="阿斯顿"
                    android:textColor="@color/text_color_edit"
                    android:textSize="@dimen/text_size_normal"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/segment_line_height"
                android:background="@color/bg_color_dividing_line" />
                                    <RelativeLayout
                android:id="@+id/info_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:background="@color/color_white"
                android:padding="@dimen/index_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/imgset3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou" />

                <TextView
                    android:id="@+id/info_usernametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgset3"
                    android:layout_marginRight="@dimen/index_padding"
                   	android:text="第三方"
                    android:textColor="@color/text_color_edit"
                    android:textSize="@dimen/text_size_normal"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/segment_line_height"
                android:background="@color/bg_color_dividing_line" />
                                                <RelativeLayout
                android:id="@+id/info_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_layout"
                android:background="@color/color_white"
                android:padding="@dimen/index_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/imgset4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou" />

                <TextView
                    android:id="@+id/info_phonetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgset4"
                    android:layout_marginRight="@dimen/index_padding"
                   	android:text="13832184732"
                    android:textColor="@color/text_color_edit"
                    android:textSize="@dimen/text_size_normal"
                    />
            </RelativeLayout>

</LinearLayout>
